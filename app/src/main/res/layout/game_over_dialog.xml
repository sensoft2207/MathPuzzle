<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="200dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="200dp"
            android:paddingLeft="12dp"
            android:paddingRight="12dp"
            android:paddingTop="12dp"
            android:paddingBottom="24dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@drawable/bt_change_bg"
                android:gravity="center"
                android:paddingBottom="15dp"
                android:orientation="vertical">

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/sad"
                    android:tint="@color/main_bg"
                    android:paddingBottom="10dp"/>

                <com.example.bugssolveinc.bangou.font.MyTextviewLight
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Game over"
                    android:gravity="center"
                    android:textSize="35sp"
                    android:textColor="@color/main_bg"/>


            </LinearLayout>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="bottom|center"
            android:orientation="horizontal">

            <LinearLayout
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_marginRight="25dp">

                <LinearLayout
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:gravity="center"
                    android:background="@drawable/operation_circle_white"
                    android:elevation="20dp"
                    android:orientation="vertical">


                    <ImageView
                        android:id="@+id/iv_play_again"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:src="@drawable/play_again"
                        android:tint="@color/parts_main"
                        android:padding="10dp"/>


                </LinearLayout>

            </LinearLayout>

            <LinearLayout
                android:layout_width="50dp"
                android:layout_height="50dp">

                <LinearLayout
                    android:id="@+id/ln_total_balance"
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:gravity="center"
                    android:background="@drawable/operation_circle_white"
                    android:elevation="20dp"
                    android:orientation="vertical">

                    <ImageView
                        android:id="@+id/iv_close"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:src="@drawable/close"
                        android:padding="15dp"
                        android:tint="@color/parts_main"/>

                </LinearLayout>

            </LinearLayout>


        </LinearLayout>

    </FrameLayout>



</LinearLayout>
